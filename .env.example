# This file contains all the environment variables your application needs.
# Copy this file to .env.local and fill in the values for your Firebase project.

# Firebase Admin SDK credentials (for server-side code)
# Find these in your Firebase project settings > Service accounts > Generate new private key
FIREBASE_PROJECT_ID="your-firebase-project-id"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Firebase client-side configuration (for browser code)
# Find these in your Firebase project settings > General > Your apps > Firebase SDK snippet > Config
NEXT_PUBLIC_FIREBASE_API_KEY="your-api-key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project-id.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project-id.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your-messaging-sender-id"
NEXT_PUBLIC_FIREBASE_APP_ID="your-app-id"

# Authentication settings
# This should be a long, random, and secret string used to encrypt session cookies.
SESSION_SECRET="your-32-character-or-longer-secret-session-key"

# The email for the first user to sign up, who will be automatically assigned the Super Admin role.
SUPER_ADMIN_EMAIL="admin@example.com"
NEXT_PUBLIC_SUPER_ADMIN_EMAIL="admin@example.com"

# Google Analytics
# Your GA Measurement ID (e.g., G-XXXXXXXXXX)
NEXT_PUBLIC_GA_MEASUREMENT_ID=""
