
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to manage their own user document
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }
    
    // Admins and sub-admins have broad read/write access
    match /{document=**} {
      allow read, write: if request.auth != null && (request.auth.token.role == 'admin' || request.auth.token.role == 'sub-admin');
    }

    // Allow authenticated users to create service requests for themselves
    match /serviceRequests/{requestId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
      allow read: if request.auth != null && request.auth.uid == resource.data.uid;
    }

    // Allow authenticated users to submit contact forms
    match /contactSubmissions/{submissionId} {
        allow create: if request.auth != null;
    }
  }
}
