rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      // Admins can read and write any user document
      allow read, write: if request.auth.token.role == 'admin';

      // Authenticated users can read their own document
      allow read: if request.auth.uid == userId;

      // Authenticated users can update specific fields on their own document
      allow update: if request.auth.uid == userId &&
                       request.resource.data.keys().hasOnly(['displayName', 'portfolioUrl', 'bio', 'lifetimeStatus']) &&
                       (request.resource.data.lifetimeStatus == 'applied' || !request.resource.data.keys().hasAny(['lifetimeStatus']));

      // Authenticated users can create their own document
      allow create: if request.auth.uid == userId;
    }
  }
}
