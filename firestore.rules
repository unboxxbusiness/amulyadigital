rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isSubAdmin() {
       return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'sub-admin';
    }
    
    function isAdminOrSubAdmin() {
      return isAdmin() || isSubAdmin();
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Users Collection
    match /users/{userId} {
      // Admins can read/write any user document
      allow read, update, delete: if isAdmin();
      // Users can read and update their own document
      allow read, update: if isSignedIn() && isOwner(userId);
      // Anyone can create a user document (sign-up)
      allow create: if true;
    }

    // Service Requests Collection
    match /serviceRequests/{requestId} {
      // Admins and sub-admins can manage all requests
      allow read, write: if isAdminOrSubAdmin();
      // Users can create requests for themselves
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      // Users can read their own requests
      allow read: if isSignedIn() && get(/databases/$(database)/documents/serviceRequests/$(requestId)).data.uid == request.auth.uid;
    }

    // Contact Submissions Collection
    match /contactSubmissions/{submissionId} {
        // Admins and sub-admins can manage all submissions
        allow read, write: if isAdminOrSubAdmin();
        // Users can create submissions for themselves
        allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
    }
    
    // Offers Collection
    match /offers/{offerId} {
        // Admins can manage offers
        allow write: if isAdmin();
        // Any signed-in user can read offers
        allow read: if isSignedIn();
    }

    // Counters Collection
    match /counters/{counterId} {
        // Only admins can read or write to counters
        allow read, write: if isAdmin();
    }
  }
}
